<script>
  document.addEventListener("DOMContentLoaded", () => {
    const images = document.querySelectorAll("img");

    images.forEach((img) => {
      if (!img.complete) {
        img.classList.add("loading");
      }

      img.onload = () => {
        img.classList.remove("loading");
      };
    });
  });
</script>
