---
import Layout from "./Layout.astro";

interface Props {
  title: string;
  date: string;
  tags: string[];
}

const { title, date, tags } = Astro.props;
---

<Layout title={`${title} | Tiago Granelli`}>
  <article class="blog-post">
    <header>
      <h1>{title}</h1>
      <p class="date">{new Date(date).toLocaleDateString()}</p>
      <div class="tags">
        {tags.map((tag) => <span class="tag">{tag}</span>)}
      </div>
    </header>
    <div class="content">
      <slot />
    </div>
  </article>
</Layout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  header {
    margin-bottom: 3rem;
    text-align: center;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .date {
    color: #666;
    margin-bottom: 1rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .tag {
    background: #e0e0e0;
    padding: 0.2rem 0.6rem;
    border-radius: 12px;
    font-size: 0.8rem;
    color: #444;
  }

  .content {
    line-height: 1.8;
    color: #333;
  }

  .content :global(h2) {
    font-size: 1.8rem;
    margin: 2rem 0 1rem;
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
  }

  .content :global(code) {
    background: #f1f1f1;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .content :global(pre) {
    background: #f8f8f8;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }
</style>
